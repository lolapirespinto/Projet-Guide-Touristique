  <script src="require.js"></script>
  <script type="text/javascript"></script>
  <script src="node_modules/mysql/index.js"></script>
  <script id="data" type="application/json"><%- JSON.stringify(data) %></script>
  <script src="js/main.js"></script>
  <script src="https://maps.google.com/maps/api/js?key=AIzaSyBi3tzwp-NeXzn1VssiiooacnFLlata9Y0"></script>

</body>
</html>